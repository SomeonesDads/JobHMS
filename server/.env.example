# Database Configuration
# These are optional - if not set, the following defaults will be used:
# DB_HOST=localhost, DB_PORT=5432, DB_USER=postgres, DB_PASSWORD=Undertale, DB_NAME=voting_app
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=Undertale
DB_NAME=voting_app

# pCloud Configuration (Optional)
# If these credentials are provided, all photo uploads will be stored in pCloud
# If not provided, photos will be stored locally in the uploads/ directory
PCLOUD_USERNAME=your_pcloud_email@example.com
PCLOUD_PASSWORD=your_pcloud_password

# Server Configuration (currently not used, server runs on port 8080)
PORT=8080
